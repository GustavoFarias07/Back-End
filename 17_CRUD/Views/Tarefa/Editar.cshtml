@model Tarefa

<h1>Editar Tarefa</h1>

<form asp-action="Editar">
    <input type="hidden" asp-for="Id"/>
    <div class="form-group">
        <label for="Descricao">Descricao</label>
        <input type="text" class="form-control" id="Descricao" name="Descricao" asp-for="Descricao" required>
    </div>
    <div class="form-group">
        <label for="Concluida">Concluída</label>
        <select class="form-control" id="Concluida" name="Concluida" asp-for="Concluida">
            <option value="true">Sim</option>
            <option value="false">Não</option>
        </select>
    </div>
   <button type="submit" class="mt-3 btn btn-outline-dark"><i class="bi bi-cloud-download"></i> Salvar</button>
</form>
<a asp-action="Index" class="mt-2 btn btn-outline-dark"><i class="bi bi-arrow-left"></i> Voltar para a Lista</a>