@model IEnumerable<_19_Atividade.Models.Veiculos>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-light">Concessionária GM</h1>

<section id="meucarrossel" class="container carousel carousel-dark slide mt-3" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#meucarrossel" data-bs-slide-to="0" class="active"></button>
                <button type="button" data-bs-target="#meucarrossel" data-bs-slide-to="1"></button>
                <button type="button" data-bs-target="#meucarrossel" data-bs-slide-to="2"></button>
            </div>

            <div class="carousel-inner" >

                <div class="carousel-item active"  data-bs-interval="1000">
                    <img src="https://ww2.freelogovectors.net/wp-content/uploads/2023/03/mazdalogo-freelogovectors.net_.png"  class="w-75 d-block">
                    
                </div>

                <div class="carousel-item" >
                    <img src="https://logodownload.org/wp-content/uploads/2014/04/toyota-logo-0.png" class="w-100 d-block" id="imgcarousel">
                </div>

                <div class="carousel-item">
                    <img src="https://www.freepnglogos.com/uploads/vw-png-logo/pulman-volkswagen-new-pulman-motor-group-png-logo-3.png" class="w-100 d-block">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#meucarrossel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#meucarrossel" data-bs-slide="next">
                <span class="carousel-control-next-icon"></span>
            </button>
        </section>

<p>
    <a asp-action="Create" class="btn btn-outline-danger">Adicionar novo Veiculos</a>
</p>
<table class="table text-light">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Disponivel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @item.Valor.ToString("C")
            </td>
            <td>
                 @if (item.Disponivel == true)
                {   
                    <span>Disponível</span>
                } else {
                    <span>Indisponível</span>
                }
                
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.VeiculoID" class="btn btn-outline-danger"><i class="bi bi-pencil"></i> Editar</a> 
                <a asp-action="Details" asp-route-id="@item.VeiculoID" class="btn btn-outline-danger"><i class="bi bi-journal-text"></i> Detalhes</a> 
                <a asp-action="Delete" asp-route-id="@item.VeiculoID" class="btn btn-outline-danger"><i class="bi bi-trash"></i> Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-12 col-lg-3 text-light">
            <div class="card " >
                <img class="card-img-top " src="@Html.DisplayFor(modelItem => item.Imagem)" alt="Imagem de capa do card">
                <div class="card-body text-center">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Nome)</h5>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.Descricao)</p>
                    <a href="#" class="btn btn-outline-danger " >Saiba mais</a>
                </div>
            </div>
        </div>

    }
</div>
